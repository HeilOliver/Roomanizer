<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.roomix.ui.views.contact.list.ContactListView">
    <center>
        <TableView fx:id="tab_contactTable" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
            <TableColumn prefWidth="75.0" text="%contact.table.firstname">
                <cellValueFactory>
                    <PropertyValueFactory property="forename" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="%contact.table.lastname">
                <cellValueFactory>
                    <PropertyValueFactory property="surname" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="%contact.table.companyname">
                <cellValueFactory>
                    <PropertyValueFactory property="companyName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="%contact.table.city">
                <cellValueFactory>
                    <PropertyValueFactory property="place" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="%contact.table.postalcode">
                <cellValueFactory>
                    <PropertyValueFactory property="postcode" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="%contact.table.street">
                <cellValueFactory>
                    <PropertyValueFactory property="street" />
                </cellValueFactory>
            </TableColumn>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
            <Button fx:id="but_delete" onAction="#buttonDelete_Click" text="%main.delete">
                <graphic>
                    <FontAwesomeIconView glyphName="TRASH" size="2em" />
                </graphic>
            </Button>
            <Button fx:id="but_new" onAction="#buttonNew_Click" text="%main.new">
                <graphic>
                    <FontAwesomeIconView glyphName="PLUS" size="2em" />
                </graphic>
            </Button>
            <Button fx:id="but_edit" onAction="#buttonEdit_Click" text="%main.edit">
                <graphic>
                    <FontAwesomeIconView glyphName="EDIT" size="2em" />
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
