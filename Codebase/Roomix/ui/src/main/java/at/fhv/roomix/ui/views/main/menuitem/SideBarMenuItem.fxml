<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="at.fhv.roomix.ui.views.main.menuitem.SideBarMenuItem"
          stylesheets="@../mainView.css" styleClass="menuItem"
          onMouseClicked="#itemClicked">
    <columnConstraints>
        <ColumnConstraints prefWidth="50"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="45"/>
    </rowConstraints>
    <FontAwesomeIconView fx:id="icon" glyphName="CLOSE" size="2em" styleClass="itemGlyph" GridPane.columnIndex="0"
                         GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>

    <Label fx:id="lbl_tag" styleClass="itemTag" GridPane.valignment="CENTER" GridPane.halignment="LEFT"
           GridPane.columnIndex="1"/>
</GridPane>
