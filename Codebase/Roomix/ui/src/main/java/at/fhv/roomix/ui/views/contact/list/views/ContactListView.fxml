<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Separator?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.fhv.roomix.ui.views.contact.list.views.ContactListView">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" >
        <Separator/>
        <TableView fx:id="tab_contactTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="75.0" text="%contact.table.firstname">
                    <cellValueFactory>
                        <PropertyValueFactory property="forename" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.lastname">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.companyname">
                    <cellValueFactory>
                        <PropertyValueFactory property="companyName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.phonenumber">
                    <cellValueFactory>
                        <PropertyValueFactory property="phonenumber" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.city">
                    <cellValueFactory>
                        <PropertyValueFactory property="place" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.postalcode">
                    <cellValueFactory>
                        <PropertyValueFactory property="postcode" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.street">
                    <cellValueFactory>
                        <PropertyValueFactory property="street" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.country">
                    <cellValueFactory>
                        <PropertyValueFactory property="country" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%contact.table.email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Separator/>
    </VBox>
</AnchorPane>
