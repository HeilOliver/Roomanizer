<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane minHeight="400.0" minWidth="700.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.roomix.ui.controller.AllReservationController">

    <center>
        <HBox BorderPane.alignment="CENTER">
            <VBox HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <HBox>
                    <children>
                        <VBox>
                            <children>
                                <Label minWidth="370.0" prefWidth="370.0" style="-fx-background-color: #f4f4f4;"
                                       text="Search Reservation:">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" prefWidth="370.0">
                                    <TextField HBox.hgrow="ALWAYS">
                                        <HBox.margin>
                                            <Insets/>
                                        </HBox.margin>
                                    </TextField>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox style="-fx-background-color: #f4f4f4;">
                            <children>
                                <Label text="Room Assignment:">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </Label>
                                <HBox>
                                    <children>
                                        <DatePicker fx:id="arrivalDatePicker">
                                            <HBox.margin>
                                                <Insets/>
                                            </HBox.margin>
                                        </DatePicker>
                                        <Button fx:id="autoAssignmentB" mnemonicParsing="false"
                                                onAction="#autoAssignmentingTheRooms" text="Auto-Assignment">
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Button>
                                        <Button fx:id="manualAssigmentB" mnemonicParsing="false"
                                                onAction="#manualAssignmentingTheRooms" text="Manual-Assignment">
                                            <HBox.margin>
                                                <Insets left="20.0"/>
                                            </HBox.margin>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                            <HBox.margin>
                                <Insets left="60.0"/>
                            </HBox.margin>
                        </VBox>
                    </children>
                </HBox>
                <TableView fx:id="reservations" prefHeight="1010.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                    <columns>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="ReservationID">
                            <cellValueFactory>
                                <PropertyValueFactory property="reservationID"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="First name">
                            <cellValueFactory>
                                <PropertyValueFactory property="firstName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="Last name">
                            <cellValueFactory>
                                <PropertyValueFactory property="lastName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="Company name">
                            <cellValueFactory>
                                <PropertyValueFactory property="companyName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="Arrival">
                            <cellValueFactory>
                                <PropertyValueFactory property="reservationStartDate"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="Departure">
                            <cellValueFactory>
                                <PropertyValueFactory property="reservationEndDate"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="No of Rooms">
                            <cellValueFactory>
                                <PropertyValueFactory property="allReservationRoomCount"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </HBox>
    </center>
</BorderPane>
