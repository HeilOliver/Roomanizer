        <mapping class="at.fhv.roomix.persist.model.ContractingpartyEntity"/>
        <mapping class="at.fhv.roomix.persist.model.InvoiceEntity"/>
        <mapping class="at.fhv.roomix.persist.model.InvoicepositionEntity"/>
        <mapping class="at.fhv.roomix.persist.model.PartneragreementEntity"/>
